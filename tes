<body>
  <h1>ðŸŽ® Game Tebak Angka</h1>
  <p>Tebak angka antara 1 sampai 10</p>

  <input type="number" id="guess" min="1" max="10" placeholder="Masukkan angka...">
  <button onclick="checkGuess()">Tebak!</button>

  <p id="result"></p>

  <script>
    // Angka acak antara 1 - 10
    let secretNumber = Math.floor(Math.random() * 10) + 1;

    function checkGuess() {
      let guess = document.getElementById("guess").value;
      let result = document.getElementById("result");

      if (guess == secretNumber) {
        result.innerHTML = "ðŸŽ‰ Benar! Angkanya adalah " + secretNumber;
      } else if (guess < secretNumber) {
        result.innerHTML = "Terlalu kecil! Coba lagi.";
      } else {
        result.innerHTML = "Terlalu besar! Coba lagi.";
      }
    }
  </script>
</body>
